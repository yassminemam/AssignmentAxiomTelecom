<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_item_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:alpha="0.6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_product_brand"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_product_price"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_product_brand"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:layout_alignParentEnd="true"
            android:id="@+id/ic_more"
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ic_heart"
            android:layout_toStartOf="@+id/ic_more"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_heart"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toStartOf="@+id/ic_heart"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_basket"/>
    </RelativeLayout>
</RelativeLayout>